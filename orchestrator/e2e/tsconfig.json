{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@framework/*": ["./src/framework/*"]
    }
  },
  "include": ["src/**/*.ts", "steps/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
