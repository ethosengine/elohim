{
  "name": "@elohim/holochain-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Elohim Holochain services - content, relationships, paths, and human network",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "holochain",
    "elohim",
    "sdk",
    "dht",
    "p2p"
  ],
  "author": "Elohim Protocol",
  "license": "MIT",
  "dependencies": {
    "@holochain/client": "^0.20.0",
    "@msgpack/msgpack": "^3.0.0-beta2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "eslint": "^8.55.0"
  },
  "peerDependencies": {
    "@holochain/client": ">=0.20.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./services/*": {
      "import": "./dist/services/*.js",
      "types": "./dist/services/*.d.ts"
    }
  }
}
