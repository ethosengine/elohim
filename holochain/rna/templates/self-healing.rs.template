    // Check if previous DNA has data
    match orchestrator.check_prev_on_startup()? {
        Some(has_data) => {
            if has_data {
                // Previous DNA has data, healing will happen on first query
                debug_log("Init: previous DNA available with data, will heal on demand")?;
                // Optionally set a flag to trigger background healing later
            } else {
                // Previous DNA exists but is empty
                debug_log("Init: previous DNA available but empty, fresh start")?;
            }
        }
        None => {
            // No previous DNA bridge, this is a fresh DNA
            debug_log("Init: no previous DNA bridge, fresh start")?;
        }
    }

    Ok(())
}

