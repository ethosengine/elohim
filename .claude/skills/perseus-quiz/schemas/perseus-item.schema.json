{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://elohim.protocol/schemas/perseus-item.schema.json",
  "title": "PerseusItem",
  "description": "A Perseus quiz question item for the lamad learning system",
  "type": "object",
  "required": ["id", "version", "question", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique question identifier",
      "pattern": "^[a-z0-9-]+$"
    },
    "version": {
      "$ref": "#/$defs/PerseusItemVersion"
    },
    "discoveryMode": {
      "type": "boolean",
      "description": "When true, answers contribute to subscales instead of being graded",
      "default": false
    },
    "question": {
      "$ref": "#/$defs/PerseusItemData"
    },
    "answerArea": {
      "$ref": "#/$defs/PerseusAnswerArea"
    },
    "hints": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/PerseusHint"
      }
    },
    "metadata": {
      "$ref": "#/$defs/PerseusItemMetadata"
    }
  },
  "$defs": {
    "PerseusItemVersion": {
      "type": "object",
      "required": ["major", "minor"],
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0
        },
        "minor": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "PerseusItemData": {
      "type": "object",
      "required": ["content", "widgets"],
      "properties": {
        "content": {
          "type": "string",
          "description": "Question text with widget placeholders"
        },
        "images": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/PerseusImage"
          }
        },
        "widgets": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/PerseusWidget"
          }
        }
      }
    },
    "PerseusWidget": {
      "type": "object",
      "required": ["type", "options"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["radio", "numeric-input", "expression", "dropdown", "sorter", "matcher"]
        },
        "options": {
          "type": "object"
        },
        "graded": {
          "type": "boolean"
        },
        "version": {
          "$ref": "#/$defs/PerseusItemVersion"
        }
      }
    },
    "PerseusAnswerArea": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["multiple", "table"]
        },
        "options": {
          "type": "object"
        },
        "calculator": {
          "type": "boolean"
        }
      }
    },
    "PerseusHint": {
      "type": "object",
      "required": ["content"],
      "properties": {
        "content": {
          "type": "string"
        },
        "widgets": {
          "type": "object"
        },
        "images": {
          "type": "object"
        }
      }
    },
    "PerseusImage": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        }
      }
    },
    "PerseusItemMetadata": {
      "type": "object",
      "required": ["assessesContentId", "bloomsLevel", "difficulty", "estimatedTimeSeconds", "questionType", "tags"],
      "properties": {
        "assessesContentId": {
          "type": "string",
          "description": "Content node ID this question assesses"
        },
        "bloomsLevel": {
          "type": "string",
          "enum": ["remember", "understand", "apply", "analyze", "evaluate", "create"]
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"]
        },
        "estimatedTimeSeconds": {
          "type": "integer",
          "minimum": 5,
          "maximum": 600
        },
        "questionType": {
          "type": "string",
          "enum": ["core", "applied", "synthesis"]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sourceContentId": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
