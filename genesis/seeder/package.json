{
  "name": "holochain-seeder",
  "version": "1.0.0",
  "description": "Seed structured JSON from /data/lamad into Holochain",
  "type": "module",
  "scripts": {
    "validate": "npx tsx src/schema-validation.ts ../data/lamad/content",
    "validate:verbose": "npx tsx src/schema-validation.ts ../data/lamad/content --verbose",
    "bootstrap": "npx tsx src/bootstrap.ts",
    "seed": "npx tsx src/seed-production.ts",
    "seed:validate": "npx tsx src/seed-production.ts --validate-only",
    "seed:dry-run": "npx tsx src/seed-production.ts --dry-run",
    "seed:blobs-only": "npx tsx src/seed-production.ts --skip-dna",
    "seed:dna-only": "npx tsx src/seed-production.ts --skip-blobs",
    "seed:dev": "DOORWAY_URL='https://doorway-dev.elohim.host' DOORWAY_API_KEY='dev-elohim-auth-2024' HOLOCHAIN_ADMIN_URL='wss://doorway-dev.elohim.host?apiKey=dev-elohim-auth-2024' npx tsx src/seed-production.ts",
    "seed:legacy": "npx tsx src/seed.ts",
    "seed:legacy:dev": "HOLOCHAIN_ADMIN_URL='wss://doorway-dev.elohim.host?apiKey=dev-elohim-auth-2024' npx tsx src/seed.ts",
    "stats": "npx tsx src/stats.ts",
    "stats:dev": "HOLOCHAIN_ADMIN_URL='wss://doorway-dev.elohim.host?apiKey=dev-elohim-auth-2024' npx tsx src/stats.ts",
    "stats:prod": "HOLOCHAIN_ADMIN_URL='wss://doorway.elohim.host?apiKey=$ELOHIM_PROD_API_KEY' npx tsx src/stats.ts",
    "migrate": "npx tsx src/migrate.ts",
    "migrate:dry-run": "npx tsx src/migrate.ts --dry-run",
    "migrate:verify": "npx tsx src/migrate.ts --verify-only",
    "snapshot": "npx tsx src/snapshot.ts",
    "snapshot:save": "npx tsx src/snapshot.ts save",
    "snapshot:create": "npx tsx src/snapshot.ts create",
    "snapshot:restore": "npx tsx src/snapshot.ts restore",
    "snapshot:clean": "npx tsx src/snapshot.ts clean",
    "snapshot:status": "npx tsx src/snapshot.ts status",
    "snapshot:list": "npx tsx src/snapshot.ts list",
    "hc:start:snapshot": "hc sandbox run --root /projects/elohim/holochain/local-dev/conductor-data -p=4445"
  },
  "dependencies": {
    "@holochain/client": "^0.20.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.10",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
