/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@app/elohim": ["src/app/elohim/index.ts"],
      "@app/elohim/*": ["src/app/elohim/*"],
      "@app/imagodei": ["src/app/imagodei/index.ts"],
      "@app/imagodei/*": ["src/app/imagodei/*"],
      "@app/lamad": ["src/app/lamad/index.ts"],
      "@app/lamad/*": ["src/app/lamad/*"],
      "@app/qahal": ["src/app/qahal/index.ts"],
      "@app/qahal/*": ["src/app/qahal/*"],
      "@app/shefa": ["src/app/shefa/index.ts"],
      "@app/shefa/*": ["src/app/shefa/*"],
      "@app/doorway": ["src/app/doorway/index.ts"],
      "@app/doorway/*": ["src/app/doorway/*"],
      "@elohim/service": ["../elohim-library/projects/elohim-service/src/index.ts"],
      "@elohim/service/*": ["../elohim-library/projects/elohim-service/src/*"],
      "@elohim/storage-client": ["node_modules/@elohim/storage-client/dist/index"],
      "@elohim/storage-client/generated": ["node_modules/@elohim/storage-client/dist/generated/index"],
      "@holochain/client": ["node_modules/@holochain/client"],
      "@holochain/client/*": ["node_modules/@holochain/client/*"]
    },
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
