{
  "productName": "Elohim Steward",
  "version": "0.1.0",
  "identifier": "host.elohim.steward",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["elohim"]
      }
    }
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeBundleCommand": "",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": []
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
