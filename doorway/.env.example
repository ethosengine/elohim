# Doorway Configuration
# Copy to .env and modify as needed

# Server
NODE_ID=                              # Auto-generated UUID if not set
LISTEN=0.0.0.0:8080
DEV_MODE=true                         # Set to false in production

# Holochain Conductor
CONDUCTOR_URL=ws://localhost:4444
APP_PORT_MIN=4445
APP_PORT_MAX=65535

# NATS (for multi-host messaging)
NATS_URL=nats://localhost:4222
NATS_USER=
NATS_PASSWORD=

# MongoDB (for persistent storage)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=doorway

# Authentication (required in production)
JWT_SECRET=                           # Required when DEV_MODE=false
JWT_EXPIRY_SECONDS=3600

# API Keys (optional, for backward compatibility with admin-proxy)
API_KEY_AUTHENTICATED=
API_KEY_ADMIN=

# Logging
LOG_LEVEL=info                        # trace, debug, info, warn, error
